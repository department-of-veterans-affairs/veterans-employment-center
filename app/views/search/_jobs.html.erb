<% if @search.jobs.empty? && @search.featured_jobs.empty? && @search.federal_jobs.empty? %>
  <div class="row job-empty">
    <div class="small-12 columns">There are no jobs that match the search criteria</div>
  </div>
<% else %>

  <div class="row job-row">
    <div class="small-12 full columns">
      <% # Only display when both are displayed on a page %>
      <% if @search.featured_jobs.any? %>
        <h3><strong>More</strong> jobs</h3>
      <% end %>
      <% if @record_count %>
        <%= render :partial => 'pagination', locals: {searcher: @searcher} %>
      <% end %>
      <div class="panel plain">
        <% @jobs.each do |job| %>
          <%= render :partial => 'job', :locals => {:job => job} %>
        <% end %>
      </div>
    </div>

</div>
<% end %>
