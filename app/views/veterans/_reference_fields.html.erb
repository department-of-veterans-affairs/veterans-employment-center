<fieldset>
  <legend>Add your professional references. Add as many as necessary by using the add reference link.</legend>
  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :name, "Name " %>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :email, "Email " %>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :job_title, "Title " %>
      <%= f.text_field :job_title %>
    </div>
  </div>
</fieldset>
