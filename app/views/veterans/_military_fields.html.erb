<fieldset>
  <legend>Add your military information. Add as many as necessary by using the add military experience link below.</legend>

  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :moc, "Military Occupation Code" %>
      <%= f.text_field :moc %>
    </div>
  </div>

  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :duty_station, "Duty Station" %>
      <%= f.text_field :duty_station %>
    </div>
  </div>
  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :organization, "Branch of Service " %>
      <%= f.text_field :organization %>
    </div>
  </div>
  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :description, "Rank" %>
      <%= f.select :rank, Rank.combined, prompt: 'Please select your rank' %>
    </div>
  </div>
  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :job_title, "Title" %>
      <%= f.text_field :job_title %>
    </div>
  </div>
  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :description, "Describe Your Position Responsibilities" %>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>

  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :start_date, "Start Date (MM/DD/YYYY) " %>
      <%= f.text_field :start_date,
        value:       (f.object.start_date.strftime("%m/%d/%Y") if f.object.start_date.present?),
        err:         "enter date like mm/dd/yyyy",
        placeholder: "MM/DD/YYYY",
        data:        {"mask" => "99/99/9999"},
        pattern:     "^[012]\\d/[0123]\\d/(?:19|20)\\d{2}$" %>
      </div>
    </div>
    <div class="row form-group dataItem">
      <div class="small-12 columns">
        <%= f.label :end_date, "End Date (MM/DD/YYYY) (leave blank if present)" %>
        <%= f.text_field :end_date,
          value:       (f.object.end_date.strftime("%m/%d/%Y") if f.object.end_date.present?),
          err:         "enter date like mm/dd/yyyy",
          placeholder: "MM/DD/YYYY",
          data:        {"mask" => "99/99/9999"},
          pattern:     "^[012]\\d/[0123]\\d/(?:19|20)\\d{2}$" %>
        </div>
      </div>

      <%= f.hidden_field :experience_type, :value => "military" %>

    </fieldset>
