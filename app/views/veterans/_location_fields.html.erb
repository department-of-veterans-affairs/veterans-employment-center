<fieldset>
  <legend>
    <div>Enter your location preferences below. Add as many as necessary by using the "Add Location" link.</div>
    <div><ul><li>For the best employment search results, specify one or more cities rather than just a state or country.</li></ul></div>
  </legend>
  <div class="row form-group dataItem">
    <div class="small-12 columns desired-location">
      <%= f.label :location, "Desired Location" %>
      <%= f.text_field  :full_name, class: "autocomplete" %>
      <%= f.hidden_field :city %>
      <%= f.hidden_field :state %>
      <%= f.hidden_field :country %>
      <%= f.hidden_field :zip %>
      <%= f.hidden_field :lat %>
      <%= f.hidden_field :lng %>
      <%= f.hidden_field :location_type, value: "desired"  %>
    </div>
  </div>
</fieldset>
