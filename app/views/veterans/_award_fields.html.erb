<fieldset>
  <legend>Enter your award information. Add as many awards as necessary by clicking Add Award below.</legend>
  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :title, "Name of award " %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :organization, "Awarding organization " %>
      <%= f.text_field :organization %>
    </div>
  </div>

  <div class="row form-group dataItem">
    <div class="small-12 columns">
      <%= f.label :date, "Date received (MM/DD/YYYY)" %>
      <%= f.text_field :date,
        value:       (f.object.date.strftime("%m/%d/%Y") if f.object.date.present?),
        err:         "enter date like mm/dd/yyyy",
        placeholder: "MM/DD/YYYY",
        data:        {mask: "99/99/9999"},
        pattern:     "^[012]\\d/[0123]\\d/(?:19|20)\\d{2}$" %>
    </div>
  </div>
</fieldset>
